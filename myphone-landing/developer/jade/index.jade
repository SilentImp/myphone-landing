          label(for="register-name")
            input.cyr(required="required", autocomplete="off", placeholder="Ат", type="text", name="name", id="register-name")
          label(for="register-surname")
            input.cyr(required="required", autocomplete="off", placeholder="Фамилия", type="text", name="surname", id="register-surname")

          .code.code-widget
            .current +7
            .list
              input(type="radio", name="code", value="+7", id="ru-kz", checked="checked") 
              label.options(for="ru-kz")
                span Россия
                b +7 
              input(type="radio", name="code", value="+7", id="kz-kz") 
              label.options(for="kz-kz")
                span Казахстан
                b +7 
              input(type="radio", name="code", value="+996", id="az-kz")
              label.options(for="az-kz")
                span Азейрбайджан
