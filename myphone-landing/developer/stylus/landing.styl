html[lang="ru"]
  .page[lang="ru"]
    display block
  .page[lang="az"]
    display none
    
html[lang="az"]
  .page[lang="ru"]
    display none
  .page[lang="az"]
    display block

html
  height 100%
  width 100%
  min-height 840px

body
  background-color #4395C5
  color #fff
  font-family Tahoma, Helvetica, Arial, sans-serif
  font-size 17px
  line-height 32px
  min-height 100%
  position relative
  
  &:after
    content "."
    overflow hidden
    text-indent -9999px
    display block
    position absolute
    width 414px 
    height 300px 
    top 241px
    bottom 0
    left 50%
    right 0
    z-index 3
    margin 0 0 0 65px
     
    pointer-events none
    background url('../images/fingers.png') 0 0 no-repeat

  &:before
    content "."
    overflow hidden
    text-indent -9999px
    display block
    position absolute
    top 0px
    bottom 0
    left 50%
    right 0
    z-index -1
    pointer-events none
    background #4395C5 url('../images/iphone.png') 44px 68px no-repeat
  
  header
    position absolute
    width 896px
    left 0
    right 0
    top 0
    margin auto
    nav.language
      position absolute
      width 69px
      height 26px
      background-color #2d76a0  
      border-radius 16px
      top 87px
      left 206px 
      font-size 0
      line-height 26px
      padding 4px
      z-index 5
      .slider
        position absolute
        z-index 1
        width 30px
        height 26px
        left 43px
        top 4px
        border-radius 12px
        background-color #52a5d6
        transition left .25s
      a
        position relative
        z-index 2
        vertical-align middle
        width 30px
        height 26px
        line-height 26px
        color #52a5d6 
        font-size 11px
        border-radius 12px
        display inline-block
        text-align center
        text-decoration none
        float right
        transition color .25s
        &.selected
          pointer-events none
          cursor default
          color #206186
          font-weight bold
      a:first-child
        float left
        &.selected~.slider
          left 4px
          
    .logotype
      text-indent -9999px
      width 200px
      height 50px
      background url("../images/logotype.png") 0 0 no-repeat
      position absolute 
      left 2px
      top 78px
  
  .page
    width 464px
    margin auto
    padding 156px 416px 0 16px
    position relative
    overflow hidden
    &:after
      content "."
      display block
      font-size 0
      line-height 0
      height 0
      clear both
      overflow hidden
      text-indent -999px
    .time
      position absolute
      top 77px
      left 0
      right 0
      height 20px
      font-size 10px
      line-height 20px
      font-family monospace 
      color #FFF 
      text-align center
    .show-rules
      margin 20px 0 
      color #a7edff
      font-size 12px
      text-decoration none
      &:hover
        text-decoration underline
    .rules
      margin 0 auto
      display none
      z-index 10
      position fixed
      background-color #3a8bba 
      top 20px
      bottom 20px
      left 40px
      right 40px
      box-sizing border-box
      max-width 1000px
      max-height 780px
      padding 40px 80px 40px 40px  
      font-family Tahoma, Helvetica, Arial, sans-serif
      font-size 17px
      line-height 32px
      color rgba(255, 255, 255, .8)
      li:before
        content '- '
      .message
        position absolute
        top 40px
        left 0
        bottom 40px
        right 0
        padding 0 80px 0 40px 
        overflow auto
      .title
        color #FFF
        font-size 32px
        line-height 48px
      .close
        position absolute
        width 40px
        height 40px
        top 36px
        right 40px
        background url('../images/close.png') 50% 50% no-repeat
        cursor pointer
        z-index 10
    .ok-message
      z-index 2
      display none
      position absolute
      width 288px 
      height 512px
      padding 77px 18px 86px 19px 
      background url('../images/phone.png') 0 0 no-repeat
      top 68px
      left 50%
      margin-left 111px
      line-height 375px
      max-width 100%
      background-size 100% 100%
      &:before
        content "."
        position absolute
        top 77px
        left 19px
        width 288px
        height 512px
        background url('../images/done.png') 50% 410px no-repeat,
                   linear-gradient(to bottom, rgba(26,87,116,1) 0%,rgba(204,178,127,1) 100%)
        z-index -2
        display block
        overflow hidden
        text-indent -999px
      .ok-message-text
        margin 0 25px
        text-align center 
        display inline-block
        vertical-align middle
        line-height 32px
      .ok-message-title
        height 42px
        background url('../images/interface.png') 50% 5px no-repeat
        font-size 16px
        line-height 36px
        padding 20px 16px 0 
        text-align center
        overflow hidden
        position relative
        text-overflow ellipsis
        font-weight normal
    .register-form
      z-index 1
      position absolute
      width 288px 
      height 512px
      padding 77px 18px 86px 19px 
      background url('../images/phone.png') 0 0 no-repeat
      top 68px
      left 50%
      margin-left 111px
      max-width 100%
      background-size 100% 100%
      &:before
        content "."
        position absolute
        top 77px
        left 19px
        width 288px
        height 512px
        background linear-gradient(to bottom, rgba(26,87,116,1) 0%,rgba(204,178,127,1) 100%)
        z-index -2
        display block
        overflow hidden
        text-indent -999px
      .register-form-title
        height 42px
        background url('../images/interface.png') 50% 5px no-repeat
        font-size 16px
        line-height 36px
        padding 20px 16px 0 
        text-align center
        overflow hidden
        position relative
        text-overflow ellipsis
        font-weight normal
      nav
        button
          margin auto
          position absolute
          bottom 125px
          left 0
          right 0
          height 48px
          border-radius 5px
          background #29824c
          text-align center
          padding 0
          font-size 16px
          line-height 48px
          border-style none
          color #fff 
          width 209px
          cursor pointer
          &:hover
            background-color darken(#29824c, 20%)
      fieldset
        padding 41px 25px 0
        font-size 0
            
        label
          display block
          padding 31px 0 0 
          border-bottom 1px solid #b7b7b7
            
          &.error input
            color #cb1313
            background url("../images/error.png") 100% 50% no-repeat
            &::-webkit-input-placeholder
              color #cb1313

            &:-moz-placeholder
              color #cb1313

            &::-moz-placeholder
              color #cb1313

            &:-ms-input-placeholder
              color #cb1313
            
        input
          outline none
          background none
          margin 0
          height 28px
          font-size 14px 
          line-height 28px
          border-style none
          width 100% 
          color #FFF 
          padding 0 38px 0 0 
          box-sizing border-box
          &::-webkit-input-placeholder
            color rgba(#fff, .6)

          &:-moz-placeholder
            color rgba(#fff, .6)

          &::-moz-placeholder
            color rgba(#fff, .6)

          &:-ms-input-placeholder
            color rgba(#fff, .6)
          
      &.validation-start input:invalid
          color #cb1313
          background url("../images/error.png") 100% 50% no-repeat
          &::-webkit-input-placeholder
            color #cb1313

          &:-moz-placeholder
            color #cb1313

          &::-moz-placeholder
            color #cb1313

          &:-ms-input-placeholder
            color #cb1313
            
    .title
      font-size 32px
      line-height 48px
      margin 0 0 32px 
      font-weight normal
    p
      margin 0 0 32px
    a
      text-decoration underline
      color inherit
      &:hover
        text-decoration none 
    .fb-like
      margin 20px 0
      text-decoration none
      display inline-block
      white-space nowrap
      height 64px
      font-size 17px 
      line-height 64px
      padding 0 80px 0 30px
      background #247bae url('../images/fb-like.png') 100% 0 no-repeat
      &:hover
        background-color #186fa2
        background-position 100% -64px 



    
@media screen and (max-width: 970px)
  html body
    &:after
      top auto
      height 550px
      left 50%
      margin-left -209px 
    &:before 
      top auto
      height 792px
      left 50%
      margin-left -279px 
    header
      width auto
      position relative
    .page
      width auto
      padding 156px 0 25px 
      .fb-like
        font-size 12px 
      .information
        padding 0 25px 
      .ok-message,
      .register-form
        position relative
        margin 24px auto
        top auto
        left auto


@media screen and (max-width: 500px)
  html.rules body
    header
      display none
    .page
      padding 0
      .information,
      .ok-message,
      .register-form
        display none
      .rules
        top auto
        left auto
        bottom auto
        right auto
        position relative
        padding 25px
        margin 0
        max-width none
        max-height none
        .close
          top 20px
          right 20px
        .message
          position relative
          top auto
          bottom auto
          padding 0
          
  html body
    &:after
    &:before 
      display none
      background none
    header
      width auto
      position relative
    .page
      width auto
      padding 156px 0 25px 
      .fb-like
        font-size 12px 
      .information
        padding 0 25px 
      .ok-message,
      .register-form
        position relative
        margin 24px auto
        top auto
        left -3px